let
   x ~ 10;        // ConstDeclaration
   y : Integer;   // VarDeclaration
   y : Integer;   // VarDeclaration
in
{
   // Assigning a value to the variable y
   y = x * 2;

   // Checking a condition
   if (y > 15) {
      // Output if the condition is true
      Putint(y);
   } else {
      // Output if the condition is false
      Puteol(); // Print end of line
   }
}
